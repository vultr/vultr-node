{
  "name": "@vultr/vultr-node",
  "private": false,
  "version": "0.2.0",
  "description": "Node module to communicate with the Vultr API",
  "main": "src/index.js",
  "scripts": {
    "build": "babel src -d dist",
    "test": "mocha $(find ./test -name '*.test.js')",
    "lint": "eslint src",
    "docs": "jsdoc --readme ./README.md ./src/api -r -d docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vultr/vultr-node.git"
  },
  "keywords": [
    "vultr"
  ],
  "author": "Vultr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vultr/vultr-node/issues"
  },
  "homepage": "https://github.com/vultr/vultr-node#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm run lint && npm test"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "jsdoc": "^3.6.3",
    "mocha": "^7.1.1",
    "nock": "^12.0.2",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7"
  },
  "directories": {
    "test": "test"
  },
  "publishConfig": {
    "access": "public"
  }
}
